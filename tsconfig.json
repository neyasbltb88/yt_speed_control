{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@root": [""],
            "@utils": ["src/scripts/utils/*"]
        },
        "skipLibCheck": true,
        "incremental": true
    },
    "include": ["./src/**/*"],
    "exclude": [
        "/dist",
        ".quasar",
        "node_modules",
        "./node_modules/**",
        "test",
        ".git",
        "dist",
        "dist*",
        "**/dist/*",
        "**/node_modules/*"
    ]
}
